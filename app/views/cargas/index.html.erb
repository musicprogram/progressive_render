<p id="notice"><%= notice %></p>

<h1>Cargas</h1>
<%= progressive_render do %>
 

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cargas.each do |carga| %>
      <tr>
        <td><%= carga.name %></td>
        <td><%= image_tag carga.description %></td>
        <td><%= link_to 'Show', carga %></td>
        <td><%= link_to 'Edit', edit_carga_path(carga) %></td>
        <td><%= link_to 'Destroy', carga, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% end %>
<%= link_to 'New Carga', new_carga_path %>

